[flake8]
max-line-length = 150
extend-ignore = 
    # Line breaks before binary operators
    W503,
    # Line break occurred after a binary operator
    W504,
    # Star imports
    F403,F405
    # Module imported but unused (F401)
    F401
exclude = 
    .git,
    __pycache__,
    .venv,
    build,
    dist,
per-file-ignores =
    # Allow unused imports in __init__.py
    # __init__.py:F401